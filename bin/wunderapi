#!/usr/bin/env node

var WunderAPI = require('wunderapi')

if (process.argv[2] == '-v') {
    console.log(WunderAPI.getVersion())
    process.exit();
}

for (var i = 3; i < process.argv.length; i++) {
    var api = new WunderAPI(process.argv[2])
    api.compileFile(process.argv[i], function(err, vows) {
        if (err) throw(err)

        vows.reporter = require('vows/lib/vows/reporters/spec')
        vows.run()
    })
}
